<Window x:Class="game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="GameWindow" Height="690" Width="1000">

    <!-- Root Grid -->
    <Grid Background="AliceBlue">

        <!-- Base Game Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Game area -->
            <Canvas x:Name="GameCanvas"
                    Background="LightBlue"
                    Margin="0,0,0,-24"
                    Grid.RowSpan="15"
                    Grid.ColumnSpan="3"/>

            <!-- Finish Game button -->
            <Button Grid.Row="12" 
                    Grid.Column="1" 
                    Click="GameWindow_Finnish_Game_Button_Click" 
                    FontFamily="Comic Sans MS" 
                    FontSize="28" 
                    Grid.ColumnSpan="2" 
                    Margin="428,40,0,10" Grid.RowSpan="3">
                Finish Game
            </Button>

            <!-- Player name display -->
            <TextBlock x:Name="PlayerNameTextBlock"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontFamily="Comic Sans MS"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
        </Grid>

        <!-- 🔳 Pause Overlay (covers entire screen) -->
        <Grid x:Name="PauseOverlay"
              Background="#AA000000"
              Visibility="Collapsed"
              Grid.RowSpan="10"
              Grid.ColumnSpan="3"
              Panel.ZIndex="100">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- PAUSED Title -->
                <TextBlock Text="PAUSED"
                           Foreground="White"
                           FontSize="48"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Resume button -->
                <Button Content="Resume"
                        Width="120"
                        Height="50"
                        FontSize="20"
                        Click="PauseButton_Click"
                        Margin="0,0,0,10"/>

                <!-- Exit to Menu button -->
                <Button Content="Exit to Menu"
                        Width="150"
                        Height="50"
                        FontSize="20"
                        Click="GameWindow_Back_Button_Click"/>
            </StackPanel>
        </Grid>

        <!-- Pause button on the game window -->
        <Button x:Name="PauseButton"
                Content="Pause"
                Width="142.8"
                Height="75"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontFamily="Comic Sans MS" 
                FontSize="28"
                Click="PauseButton_Click"
                Panel.ZIndex="200"/>

        <TextBlock x:Name="GameTimerText"
                   Text="00:00"
                   FontFamily="Consolas"
                   FontSize="50"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,54,0,0"
                   Panel.ZIndex="200"/>
    </Grid>
</Window>