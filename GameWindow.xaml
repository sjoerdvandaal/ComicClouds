<Window x:Class="game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWindow" Height="515" Width="800">

    <!-- Outer Grid (background) -->
    <Grid Background="AliceBlue">

        <!-- Inner Grid (content layout) -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Main Game Canvas -->
            <Canvas x:Name="GameCanvas"
                    Background="LightBlue"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="1">

                <!-- Background comic panel -->
                <Image x:Name="ComicBackground"
                       Source="pack://application:,,,/images/Hi-and-Lois.jpg"
                       Canvas.Left="119" Canvas.Top="61"
                       Width="576" Height="300"
                       Stretch="Fill"
                       Panel.ZIndex="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

                <!-- White oval panels -->
                <Border x:Name="Panel1"
                        Width="191" Height="150"
                        Canvas.Left="119" Canvas.Top="61"
                        Background="White"
                        BorderBrush="Black" BorderThickness="2"
                        CornerRadius="75"
                        Panel.ZIndex="1"/>

                <Border x:Name="Panel2"
                        Width="145" Height="75"
                        Canvas.Left="315" Canvas.Top="61"
                        Background="White"
                        BorderBrush="Black" BorderThickness="2"
                        CornerRadius="75"
                        Panel.ZIndex="1"/>

                <Border x:Name="Panel3"
                        Width="229" Height="150"
                        Canvas.Left="476" Canvas.Top="61"
                        Background="White"
                        BorderBrush="Black" BorderThickness="2"
                        CornerRadius="75"
                        Panel.ZIndex="1"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.34"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.594"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <!-- Draggable clouds -->
                <Border x:Name="Cloud1" Background="LightSkyBlue" CornerRadius="20" Cursor="Hand"
                        Canvas.Left="145" Canvas.Top="380"
                        MouseLeftButtonDown="Cloud_MouseLeftButtonDown"
                        MouseMove="Cloud_MouseMove"
                        MouseLeftButtonUp="Cloud_MouseLeftButtonUp"
                        Panel.ZIndex="2">
                    <TextBlock Text="We should go now!"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>

                <Border x:Name="Cloud2" Background="LightCoral" CornerRadius="20" Cursor="Hand"
                        Canvas.Left="303" Canvas.Top="380"
                        MouseLeftButtonDown="Cloud_MouseLeftButtonDown"
                        MouseMove="Cloud_MouseMove"
                        MouseLeftButtonUp="Cloud_MouseLeftButtonUp"
                        Panel.ZIndex="2">
                    <TextBlock Text="Wait, what about the others?"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>

                <Border x:Name="Cloud3" Background="LightGreen" CornerRadius="20" Cursor="Hand"
                        Canvas.Left="516" Canvas.Top="380"
                        MouseLeftButtonDown="Cloud_MouseLeftButtonDown"
                        MouseMove="Cloud_MouseMove"
                        MouseLeftButtonUp="Cloud_MouseLeftButtonUp"
                        Panel.ZIndex="2">
                    <TextBlock Text="Let's stick together!"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Check Order Button -->
                <Button x:Name="CheckButton"
                        Content="Check Order"
                        Width="120" Height="40"
                        Canvas.Bottom="10"
                        Canvas.Left="662"
                        Panel.ZIndex="3"
                        Click="CheckButton_Click"
                        Canvas.Top="424"/>
            </Canvas>

            <!-- Back button -->
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Click="GameWindow_Back_Button_Click"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    FontFamily="Comic Sans MS"
                    FontSize="20">
                Back
            </Button>

            <!-- Pause Overlay -->
            <Grid x:Name="PauseOverlay"
                  Background="#AA000000"
                  Visibility="Collapsed"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="1"
                  Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="PAUSED"
                               Foreground="White"
                               FontSize="48"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    <Button Content="Resume"
                            Width="120"
                            Height="50"
                            FontSize="20"
                            Click="PauseButton_Click"
                            Margin="0,0,0,10"/>
                    <Button Content="Exit to Menu"
                            Width="150"
                            Height="50"
                            FontSize="20"
                            Click="GameWindow_Back_Button_Click"/>
                </StackPanel>
            </Grid>

            <!-- Pause Button -->
            <Button x:Name="PauseButton"
                    Content="Pause"
                    Width="80"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Click="PauseButton_Click"
                    Panel.ZIndex="200"/>

            <!-- Game Timer -->
            <TextBlock x:Name="GameTimerText"
                       Text="00:00"
                       FontFamily="Consolas"
                       FontSize="50"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,3,0,0"
                       Panel.ZIndex="200"/>
        </Grid>
    </Grid>
</Window>
