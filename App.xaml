<Application x:Class="game.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="StartPage.xaml">
    <Application.Resources>
        <!-- Hidden MediaElement for background music -->
        <MediaElement x:Key="BackgroundMusicPlayer"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Volume="1.0"
                      Source="Audio/AudioGame.mp3"
                      MediaEnded="BackgroundMusicPlayer_MediaEnded"
                      Visibility="Hidden"/>
    </Application.Resources>
</Application>

