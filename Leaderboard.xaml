<Window x:Class="game.Leaderboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leaderboard" Height="555" Width="783">
    <Grid Background="AliceBlue" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Leaderboard"
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Headers -->
        <TextBlock Text="Positie" Grid.Row="1" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Naam" Grid.Row="1" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="Score" Grid.Row="1" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- 11 positions -->
        <TextBlock Text="1" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="2" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="3" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="4" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="5" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="6" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="7" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="8" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="8" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="9" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="9" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="10" Grid.Column="2" HorizontalAlignment="Center"/>

        <TextBlock Text="10" Grid.Row="11" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBlock Text="-" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock Text="0" Grid.Row="11" Grid.Column="2" HorizontalAlignment="Center"/>
    </Grid>
</Window>


