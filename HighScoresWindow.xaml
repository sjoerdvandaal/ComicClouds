<Window x:Class="game.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="High Scores"
        Height="700"
        Width="1000"
        Background="AliceBlue">

    <Grid Margin="10">
        <!-- Define two rows: one for the button, one for the DataGrid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Back button -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Click="Leaderboard_Back_Button_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Comic Sans MS"
                FontSize="20"
                Padding="15,5"
                Margin="0,0,0,10"
                Content="Back"/>

        <!-- High Scores Table -->
        <DataGrid x:Name="HighScoreGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Margin="0,10,0,0"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="LightGray"
                  FontSize="16"
                  Background="White"
                  BorderBrush="Black"
                  BorderThickness="1"/>
    </Grid>
</Window>
